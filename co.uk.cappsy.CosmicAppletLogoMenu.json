{
  "id": "co.uk.cappsy.CosmicAppletLogoMenu",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "24.08",
  "sdk": "org.freedesktop.Sdk",
  "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
  "finish-args": [
    "--socket=wayland",
    "--filesystem=xdg-config/cosmic:ro",
    "--talk-name=com.system76.CosmicSettingsDaemon",
    "--filesystem=/sys/class/hwmon:ro",
    "--filesystem=/sys/class/drm:ro",
    "--filesystem=/sys/devices:ro",
    "--device=all"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin",
    "build-args": ["--share=network"],
    "env": {
      "CARGO_HOME": "/run/build/cosmic-applet-logomenu/cargo"
    }
  },
  "modules": [
    {
      "name": "cosmic-applet-logomenu",
      "buildsystem": "simple",
      "build-commands": [
        "cd applet && cargo build --release --locked && cd ..",
        "cd settings && cargo build --release --locked && cd ..",

        "install -Dm755 target/release/cosmic-applet-logomenu -t /app/bin",
        "install -Dm755 target/release/cosmic-logomenu-settings -t /app/bin",

        "install -Dm644 res/co.uk.cappsy.CosmicAppletLogoMenu.desktop -t /app/share/applications",
        "install -Dm644 res/co.uk.cappsy.CosmicLogoMenuSettings.desktop /app/share/applications/co.uk.cappsy.CosmicAppletLogoMenu.Settings.desktop",

        "install -Dm644 res/icons/hicolor/scalable/apps/co.uk.cappsy.CosmicAppletLogoMenu.svg /app/share/icons/hicolor/scalable/apps/co.uk.cappsy.CosmicAppletLogoMenu.svg",
        "install -Dm644 res/icons/hicolor/scalable/apps/co.uk.cappsy.CosmicLogoMenuSettings.svg /app/share/icons/hicolor/scalable/apps/co.uk.cappsy.CosmicAppletLogoMenu.Settings.svg"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "."
        },
        {
          "type": "script",
          "dest-filename": "cargo-vendor.tar.gz",
          "commands": [
            "cd cosmic-applet-logomenu && cargo vendor && tar czf ../cargo-vendor.tar.gz vendor"
          ]
        }
      ]
    }
  ],
  "apps": [
    {
      "name": "cosmic-applet-logomenu",
      "command": "cosmic-applet-logomenu",
      "desktop": "co.uk.cappsy.CosmicAppletLogoMenu.desktop"
    },
    {
      "name": "cosmic-logomenu-settings",
      "command": "cosmic-logomenu-settings",
      "desktop": "co.uk.cappsy.CosmicAppletLogoMenu.Settings.desktop"
    }
  ],
  "binaries": [
    {
      "name": "cosmic-applet-logomenu"
    },
    {
      "name": "cosmic-logomenu-settings"
    }
  ]
}
